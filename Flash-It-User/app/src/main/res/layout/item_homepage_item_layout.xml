<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp" android:layout_height="150dp"
    android:orientation="horizontal"
    android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardPreventCornerOverlap="false">



        <RelativeLayout
            android:layout_width="130dp"
            android:id="@+id/cardLayout"
            android:background="@android:color/white"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:id="@+id/itemImage" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/externalIcon"
                android:src="@drawable/external_link_filled_50"
                android:layout_alignTop="@+id/itemImage"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_alignRight="@+id/itemImage"/>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemImage"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:id="@+id/itemName"
                    android:text="@string/gucci_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/itemName"
                    android:layout_marginRight="2.5dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/itemPriceText"
                    android:layout_alignParentRight="true"
                    android:text="@string/dummy_price"
                    android:layout_alignParentBottom="true"
                    android:textColor="@android:color/black"/>


            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>





