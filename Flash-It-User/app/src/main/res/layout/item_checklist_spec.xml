<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp" android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checklistItem"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/checkedboxIcon"
                android:src="@drawable/checked_checkbox_96"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checklistTask"
                android:text="@string/dummy_checklist_item"
                android:layout_toRightOf="@+id/checkedboxIcon"
                android:layout_marginTop="6.55dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/deleteToTrash"
                android:layout_alignTop="@+id/checkedboxIcon"
                android:layout_alignBottom="@+id/checkedboxIcon"
                android:src="@drawable/red_trash_96"/>

        </RelativeLayout>

</RelativeLayout>